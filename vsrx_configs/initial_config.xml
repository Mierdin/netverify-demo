<configuration>
    <security>
        <forwarding-options operation="replace">
            <family>
                <inet6>
                    <mode>packet-based</mode>
                </inet6>
            </family>
        </forwarding-options>
        <policies>
            <policy>
                <from-zone-name>trust</from-zone-name>
                <to-zone-name>untrust</to-zone-name>
                <policy>
                    <name>permit-all</name>
                    <match>
                        <source-address>any</source-address>
                        <destination-address>any</destination-address>
                        <application>any</application>
                    </match>
                    <then>
                        <permit>
                        </permit>
                    </then>
                </policy>
            </policy>
            <policy>
                <from-zone-name>untrust</from-zone-name>
                <to-zone-name>trust</to-zone-name>
                <policy>
                    <name>deny-all</name>
                    <match>
                        <source-address>any</source-address>
                        <destination-address>any</destination-address>
                        <application>any</application>
                    </match>
                    <then>
                        <deny/>
                    </then>
                </policy>
            </policy>
        </policies>
        <zones>
            <security-zone>
                <name>trust</name>
                <interfaces>
                    <name>ge-0/0/1.0</name>
                    <host-inbound-traffic>
                        <system-services>
                            <name>all</name>
                        </system-services>
                    </host-inbound-traffic>
                </interfaces>
                <interfaces>
                    <name>ge-0/0/0.0</name>
                    <host-inbound-traffic>
                        <system-services>
                            <name>all</name>
                        </system-services>
                    </host-inbound-traffic>
                </interfaces>
            </security-zone>
            <security-zone>
                <name>untrust</name>
                <interfaces>
                    <name>ge-0/0/2.0</name>
                    <host-inbound-traffic>
                        <system-services>
                            <name>all</name>
                        </system-services>
                    </host-inbound-traffic>
                </interfaces>
            </security-zone>
        </zones>
    </security>
</configuration>